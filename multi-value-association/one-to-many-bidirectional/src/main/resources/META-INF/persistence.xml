<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <!--it better to list your entities than to use this element!-->
    <class>com.khaled.jpa.learning.one.to.many.biddirectional.Post</class>
    <class>com.khaled.jpa.learning.one.to.many.biddirectional.Comment</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
    <property name="eclipselink.logging.level.sql" value="FINEST"/>
    <property name="eclipselink.logging.parameters" value="true"/>
    <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1"/>
    <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
    <property name="eclipselink.target-database" value="DB2"/>
  </persistence-unit>
  <persistence-unit name="readyUOneToMany" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.khaled.jpa.learning.one.to.many.biddirectional.Post</class>
    <class>com.khaled.jpa.learning.one.to.many.biddirectional.Comment</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
    <property name="eclipselink.logging.level.sql" value="FINEST"/>
    <property name="eclipselink.logging.parameters" value="true"/>
    <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1"/>
    <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
    <property name="eclipselink.target-database" value="DB2"/>
  </persistence-unit>
</persistence>
